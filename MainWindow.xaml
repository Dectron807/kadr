<Window x:Class="kadr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отдел кадров" Height="350" Width="600">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" Text="Отдел кадров" HorizontalAlignment="Center"/>

            <Button Content="Управление сотрудниками" Width="200" Click="EmployeeButton_Click"/>
            <Button Content="Управление проектами" Width="200" Click="ProjectButton_Click"/>
            <Button Content="Управление отделами" Width="200" Click="DepartmentButton_Click"/>
            <Button Content="Управление должностями" Width="200" Click="PositionButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
